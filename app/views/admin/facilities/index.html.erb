<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>コメント数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td>
          <%= link_to admin_member_path(facility.member) do %>
            image
            <%#= image_tag .user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to facility.title, admin_facility_path(facility) %></td>
        <td><%= facility.body %></td>
        <td><%= facility.comments.count %></td>
        <td>
          <%= render "amin/facilities/tag_list", tag_list: facility.tag
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @facilities %>