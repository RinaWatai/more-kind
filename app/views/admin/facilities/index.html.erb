<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>コメント数</th>
      <th>タグ</th>
    </tr>
  </thead>
  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td>
          <%= link_to admin_member_path(facility.member) do %>
            <% if facility.image.attached? %>
              <%= image_tag facility.image, size: "100x100" %>
            <% else %>
              <%= image_tag 'facility_no_image.png', size: "100x100" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to facility.title, admin_facility_path(facility) %></td>
        <td><%= facility.body %></td>
        <td><%= facility.comments.count %></td>
        <td>
          <%= render "admin/facilities/tag_list", tag_list: facility.tag_list %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @facilities %>
