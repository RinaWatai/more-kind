<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>コメント数</th>
      <th>タグ</th>
    </tr>
  </thead>
  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td>
          <%= link_to admin_member_path(facility.member) do %>
            image
            <%#= image_tag .user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to facility.title, admin_facility_path(facility) %></td>
        <td><%= facility.body %></td>
        <td><%= facility.comments.count %></td>
        <td>
          <%= render "admin/facilities/tag_list", tag_list: facility.tag_list %>
      <%= form_with model: @facility, url: admin_facilities_path(@facility) do |f| %>
        <%= render 'form', f: f, tag_list: facility.tag_list %>
      <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @facilities %>

<%= link_to "tag",new_admin_tag_path %>