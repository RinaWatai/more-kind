    <% if facility.errors.any? %>
      <h3><%= facility.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <% facility.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
