<div class="container">
  <h4>会員一覧</h4>

  <%= link_to admin_members_path, class: 'admin_members-table-link' do %>
    <table class="table" id="admin-members-table">
      <thead>
        <tr>
          <th></th>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr class="table-row" data-url="<%= admin_member_path(member) %>">
            <td>
              <%= link_to admin_member_path(member) do %>
                <% if member.image.attached? %>
                  <%= image_tag member.image, size: "100x100", class: "rounded-image" %>
                <% else %>
                  <%= image_tag 'member_no_image.png', size: "100x100", class: "rounded-image" %>
                <% end %>
              <% end %>
            </td>
            <td><%= member.id %></td>
            <td><%= member.name %></td>
            <td><%= member.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>