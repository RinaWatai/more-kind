<div class="row align-items-center">
  <div class="col-auto">
    <h4 style="background-color: #f8f9fa; padding: 0.25rem 0.75rem;">会員一覧</h4>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>

        </th>
        <th>会員ID</th>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
<% @members.each do |member| %>
  <tr>
    <td>
      <% if member.image.attached? %>
        <td>
          <%= link_to admin_member_path(member) do %>
            <%= image_tag member.image, size: "100x100" %>
          <% end %>
        </td>
      <% else %>
        <td>
          <%= link_to admin_member_path(member) do %>
            <%= image_tag 'member_no_image.png', size: "100x100" %>
          <% end %>
        </td>
      <% end %>
      <td><%= member.id %></td>
      <td><%= link_to member.name, admin_member_path(member) %></td>
      <td><%= member.email %></td>
<% end %>
  </table>
</div>